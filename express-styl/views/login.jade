extends layout
block content
	.col-md-5.col-md-offset-4
		.panel.panel-default
			.panel-heading
				登陆窗口
				a(class="pull-right", href="/register")  注册
			.panel-body
				form
					.form-group
						label 用户名
						input(type="text", class="form-control", id="username", placeholder="用户名/手机号/邮箱地址")
					.form-group
						label 密码
						input(type="password", class="form-control", id="password")
					.checkbox
						label
							input(type="checkbox")
							记住密码         
							a 忘记密码
					butotn(type="submit", class="btn btn-primary btn-block") 登陆